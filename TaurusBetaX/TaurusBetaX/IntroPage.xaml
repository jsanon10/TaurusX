<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImage ="big_fade_white.jpg"
             x:Class="TaurusBetaX.IntroPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="4 Week Training" HorizontalOptions="Center" BackgroundColor="Transparent" Font="verdana" FontAttributes="Bold" TextColor="SteelBlue" Clicked="Button_Clicked"/>


            <Button Text="My Workout List" HorizontalOptions="Center" BackgroundColor="Transparent" Font="verdana" FontAttributes="Bold" TextColor="SteelBlue" Clicked="Workout_Selection_Clicked"/>
            
         
        </StackLayout>
    </ContentPage.Content>
</ContentPage>